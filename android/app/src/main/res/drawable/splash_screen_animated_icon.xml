<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
  <aapt:attr name="android:drawable">
    <vector
        android:width="432dp"
        android:height="432dp"
        android:viewportHeight="432"
        android:viewportWidth="432">
      <group android:name="robot_icon">
        <!-- Background circle -->
        <path
            android:name="background_circle"
            android:fillColor="#ADD8E6"
            android:pathData="M216,216m-200,0a200,200 0,1,1 400,0a200,200 0,1,1 -400,0" />

        <!-- Robot head (white rounded rectangle) -->
        <path
            android:name="robot_head"
            android:fillColor="#FFFFFF"
            android:pathData="M110,150 C110,135 122,125 140,125 L292,125 C310,125 322,135 322,150 L322,270 C322,285 310,295 292,295 L140,295 C122,295 110,285 110,270 Z" />

        <!-- Robot face visor (dark blue) -->
        <path
            android:name="robot_visor"
            android:fillColor="#2C3E50"
            android:pathData="M130,180 C130,170 140,165 155,165 L277,165 C292,165 302,170 302,180 L302,240 C302,250 292,255 277,255 L155,255 C140,255 130,250 130,240 Z" />

        <!-- Left eye (cyan) -->
        <path
            android:name="left_eye"
            android:fillColor="#00CED1"
            android:pathData="M170,205m-18,0a18,18 0,1,1 36,0a18,18 0,1,1 -36,0" />

        <!-- Right eye (cyan) -->
        <path
            android:name="right_eye"
            android:fillColor="#00CED1"
            android:pathData="M262,205m-18,0a18,18 0,1,1 36,0a18,18 0,1,1 -36,0" />

        <!-- Smile (cyan) -->
        <path
            android:name="smile"
            android:strokeColor="#00CED1"
            android:strokeWidth="4"
            android:strokeLineCap="round"
            android:pathData="M195,223 Q216,233 237,223"
            android:fillColor="#00000000" />

        <!-- Antenna (blue) -->
        <path
            android:name="antenna"
            android:fillColor="#00BFFF"
            android:pathData="M206,105 L226,105 L226,125 L206,125 Z" />

        <!-- Left headphone (blue frame, orange accent) -->
        <path
            android:name="left_headphone_blue"
            android:fillColor="#00BFFF"
            android:pathData="M90,190 L110,190 L110,240 L90,240 Z" />
        <path
            android:name="left_headphone_orange"
            android:fillColor="#FFA500"
            android:pathData="M85,190 L95,190 L95,240 L85,240 Z" />

        <!-- Right headphone (blue frame, orange accent) -->
        <path
            android:name="right_headphone_blue"
            android:fillColor="#00BFFF"
            android:pathData="M322,190 L342,190 L342,240 L322,240 Z" />
        <path
            android:name="right_headphone_orange"
            android:fillColor="#FFA500"
            android:pathData="M337,190 L347,190 L347,240 L337,240 Z" />
      </group>
      <group android:name="time_group" />
    </vector>
  </aapt:attr>

  <!-- Fade in animation -->
  <target android:name="robot_icon">
    <aapt:attr name="android:animation">
      <set android:ordering="together">
        <objectAnimator
            android:duration="500"
            android:propertyName="alpha"
            android:startOffset="0"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType">
          <aapt:attr name="android:interpolator">
            <pathInterpolator android:pathData="M 0.0,0.0 c0.4,0 0.2,1 1.0,1.0" />
          </aapt:attr>
        </objectAnimator>
      </set>
    </aapt:attr>
  </target>

  <target android:name="time_group">
    <aapt:attr name="android:animation">
      <set android:ordering="together">
        <objectAnimator
            android:duration="500"
            android:propertyName="translateX"
            android:startOffset="0"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType" />
      </set>
    </aapt:attr>
  </target>
</animated-vector>
